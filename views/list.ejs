<%- include("header") -%>

  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>
  <!-- <% %> it makes possible to write control flow in html  -->
  <!-- It is necessary to use in elements that are not html -->

  <div class="box">
    <% for(var i = 0; i < newListItem.length; i++){ %>
    <div class="item">
      <input type="checkbox">
      <p><%= newListItem[i] %></p>

    </div>
    <% } %>
    <!-- <form class="item" action="/" method="post"> -->
    <form class="item" action=<%= url %> method="post">

      <input type="text" name="newItem" placeholder="Next task" autocomplete="off">
      <button type="submit" name="list" value= <%= listTitle %> >+</button>
    </form>
  </div>


<%- include('footer') -%>
